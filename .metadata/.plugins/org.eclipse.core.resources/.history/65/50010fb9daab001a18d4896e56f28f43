package prueba2;
import java.util.HashMap;
//import java.io.*;
public class Fase3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		HashMap<String, String> letrasRepetidas = new HashMap<String, String>();
		/*
		letrasRepetidas.put("B", "1");
		letrasRepetidas.put("R", "1");
		letrasRepetidas.put("A", "1");
		letrasRepetidas.put("H", "1");
		letrasRepetidas.put("I", "1");
		letrasRepetidas.put("M", "1");
		*/
		//manera 2
		char [] letrasNombre;
		letrasNombre = new char [6];
		letrasNombre[0] = 'B';
		letrasNombre[1] = 'R';
		letrasNombre[2] = 'A';
		letrasNombre[3] = 'H';
		letrasNombre[4] = 'I';
		letrasNombre[5] = 'M';
		int contarLetras;
		for (char letra : letrasNombre) {
			contarLetras = 0;
			for (char otrasLetras: letrasNombre) {
				if (letra == otrasLetras) {
					contarLetras++;
				}
			}
			letrasRepetidas.put(String.valueOf(letra), String.valueOf(contarLetras));
		}
		for (String i : letrasRepetidas.values()) {
			  System.out.println(i);
			}
		

	}

}
